<div class="panel panel-default"> 
  <div class="panel-body">
    <div class="row"> 
      <div class="col-md-4">
        <%= image_tag @place.image.url(:medium) %>

        <div class="star-rating" data-score= <%= @avg_review %> ></div>
        <em><%= "#{@reviews.length} reviews" %></em>

        <div class="table-responsive">
          <table class="table">
            <tbody>
              <tr>
                <td><strong>Title:</strong></td>
                <td><%= @place.name %></td>
              </tr>
              <tr>
                <td><strong>Description:</strong></td>
                <td><%= @place.description %></td>
              </tr>    
            </tbody>
          </table>
          <%= link_to "Write a review", new_place_review_path(@place) %> 
        </div>
      </div>
      <div class="col-md-7 col-md-offset-1">
        <h1 class="review-title"><%= @place.name %> </h1>
        <p> <%= @place.description %> </p>

        <% if @reviews.blank? %> 
          <%= link_to "Write the first review!", new_place_review_path(@place), class: "btn btn-danger" %>
        <% else %> 
          <% @reviews.each do |r| %> 
            <div class="reviews">
              <div class="star-rating" data-score= <%= r.rating %> ></div>
              <p><%= r.comment %></p>
            </div>
          <% end %>
        <% end %> 
      </div>
    </div>
  </div>
</div> 

<%= link_to 'Edit', edit_place_path(@place) %> |
<%= link_to 'Back', root_path %>

<script>
    $('.star-rating').raty({
      path: '/assets/',
      readOnly: true,
      score: function() {
            return $(this).attr('data-score');
    }
  });

</script>
